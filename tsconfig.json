{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "pretty": true,
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "lib": ["es2018", "dom"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "esm",
    "**/__tests__/**/*",
    "*.test.ts",
    "*.test.tsx"
  ]
}
